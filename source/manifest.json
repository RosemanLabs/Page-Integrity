{
  "manifest_version": 2,
  "name": "Page Integrity",
  "description": "Extension",
  "version": "1.0.0",
  "permissions": ["activeTab", "tabs", "webRequest", "<all_urls>", "webRequestBlocking", "storage", "notifications"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Page Integrity",
    "default_popup": "popup.html",
    "default_icon": {
      "512": "icons/question-mark.png"
    }
  }
}



